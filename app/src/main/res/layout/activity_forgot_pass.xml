<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/actionbarcolor"
    tools:context=".Forgot_pass">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/main_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:weightSum="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/actionbarcolor"
                android:id="@+id/li">
                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="90dp"
                    app:srcCompat="@mipmap/main_n"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:id="@+id/main" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:textSize="13dp"
                    android:id="@+id/for_title"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="40dp"
                    android:text="Password reset details will send on your registered e-mail id. Please enter your registered e-mail Id."/>
            </LinearLayout>
            <ImageView
                android:layout_below="@+id/main_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/green_arrow"
                android:background="#fff"
                android:layout_gravity="center"
                android:id="@+id/image6" />

            <EditText
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username Or Email Id"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:maxLines="1"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/send"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="27dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#fff"
                android:background="@drawable/black_btn"
                android:text="Send"
                android:textAllCaps="false"
                android:textSize="19dp"
                android:layout_weight="0.20" />

            <TextView
                android:text="Don't have account?"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textColor="#7B7F82"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:id="@+id/dont" />

            <Button
                android:id="@+id/sign_up"
                style="?android:textAppearanceSmall"
                android:layout_width="210dp"
                android:layout_height="43dp"
                android:textColor="#7A7F83"
                android:background="@drawable/border_new"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="30dp"
                android:text="Sign Up Now"
                android:textSize="15dp"
                android:layout_weight="0.20" />

        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#25BD72"
            tools:ignore="ObsoleteLayoutParam">

        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
