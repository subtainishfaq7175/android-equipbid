<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context="equipbid.armentum.com.equip_bid.Edit_User_Setting">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="70dp"
            android:background="#fff">

            <TextView
                android:text="USERNAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/nametxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="User Name"
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="3dp"
                android:background="@drawable/desable_edit"
                android:layout_marginBottom="15dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:id="@+id/username" />

            <TextView
                android:text="FIRST NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/usertxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:id="@+id/first_name" />

            <TextView
                android:text="LAST NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lasttxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:id="@+id/last_name" />

            <TextView
                android:text="EMAIL ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/emailtxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Enter Email Id"
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:id="@+id/email" />

            <TextView
                android:text="USER ROLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/roletxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:hint="User Role"
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="3dp"
                android:background="@drawable/desable_edit"
                android:layout_marginBottom="15dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:id="@+id/userrole" />

            <TextView
                android:text="MOBILE NO."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phonetxt"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:hint="Mobile No."
                android:ems="10"
                android:textSize="17dp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="20dp"
                android:textColor="#797C82"
                android:textColorHint="#797C82"
                android:maxLines="1"
                android:maxLength="12"
                android:id="@+id/phone" />

            <Button
                android:text="Change Password"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:paddingRight="30dp"
                android:paddingLeft="15dp"
                android:layout_marginBottom="30dp"
                android:id="@+id/Change_pass"
                android:textColor="#fff"
                android:textAllCaps="false"
                android:background="@drawable/btn_green"
                android:textSize="19dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
