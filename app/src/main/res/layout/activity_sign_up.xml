<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/actionbarcolor"
    tools:context=".Sign_up">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/main_l"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:background="#fff"
            android:orientation="vertical"
            android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/actionbarcolor"
            android:id="@+id/li">
            <ImageView
                android:layout_width="220dp"
                android:layout_height="90dp"
                app:srcCompat="@mipmap/main_n"
                android:layout_gravity="center"
                android:layout_marginTop="9dp"
                android:id="@+id/main" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#fff"
                android:textSize="13dp"
                android:id="@+id/sign_title"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:text="Enter your Username, e-mail Id and password to SignUp."/>

        </LinearLayout>
            <ImageView
                android:layout_below="@+id/main_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/green_arrow"
                android:background="#fff"
                android:layout_gravity="center"
                android:id="@+id/image6" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="First Name"
                android:textColorHint="#7B7F82"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:maxLines="1"
                android:id="@+id/firstname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Last Name"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:maxLines="1"
                android:id="@+id/lastname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="User Name"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:maxLines="1"
                android:id="@+id/username" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email Id"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:inputType="textEmailAddress"
                android:maxLines="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:maxLines="1"
                android:hint="Mobile No."
                android:gravity="center"
                android:id="@+id/mobile" />

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:textColorHint="#7B7F82"
                android:paddingBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:textSize="17dp"
                android:background="@drawable/edittext"
                android:layout_marginBottom="15dp"
                android:textColor="#7B7F82"
                android:gravity="center"
                android:maxLines="1"
                android:maxLength="10"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/sign_up"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textColor="#fff"
                android:background="@drawable/black_btn"
                android:text="Done"
                android:textAllCaps="false"
                android:textSize="19dp"
                android:layout_weight="0.20"
                tools:ignore="HardcodedText" />

            <LinearLayout
                    android:id="@+id/footer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    tools:ignore="ObsoleteLayoutParam">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
